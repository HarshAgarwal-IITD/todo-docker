{
  "name": "week27-mono-deployment",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate:db":"cd packages/db && bunx prisma generate",
    "start:backend":"cd apps/backend && bun run src/index.ts",
    "start:web":"cd apps/web && bun run src/index.ts",
    "start:ws":"cd apps/ws && bun run src/index.ts"

  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
